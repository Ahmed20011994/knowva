# Copy this file to .env and update with your actual values
# This is the environment file for Docker Compose

# Required: Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Atlassian Configuration (for Confluence/Jira integration)
CONFLUENCE_URL=https://your-domain.atlassian.net/
CONFLUENCE_USERNAME=your_email@domain.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

JIRA_URL=https://your-domain.atlassian.net/
JIRA_USERNAME=your_email@domain.com
JIRA_API_TOKEN=your_jira_api_token

NOTION_TOKEN=your_notion_integration_token

# Optional: Other MCP Server Configurations
BRAVE_API_KEY=your_brave_search_api_key_here
FILESYSTEM_ROOT=/app/uploads

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
# Required - Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required - MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=rogueai

# Required - JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
LOG_TOOL_CALLS=true

# Atlassian (for Confluence/Jira integration)
CONFLUENCE_URL=https://your-domain.atlassian.net/
CONFLUENCE_USERNAME=your_email@domain.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

JIRA_URL=https://your-domain.atlassian.net/
JIRA_USERNAME=your_email@domain.com
JIRA_API_TOKEN=your_jira_api_token


# Optional - Brave Search API
BRAVE_API_KEY=your_brave_search_api_key

# Optional - File System Root
FILESYSTEM_ROOT=/tmp

# Email Configuration (for invitation emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
APP_URL=http://localhost:3000